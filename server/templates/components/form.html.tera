<div class="w-full max-w-lg mb-4">
    <form action={{ form.action }} method={{ form.method }} accept-charset="utf-8" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        {% for row in form.rows %}
            <div class="mb-5">
                <label for={{ row.label | slugify }} class="block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2">{{ row.label }}</label>
                <input name={{ row.label | slugify }} placeholder={{ row.placeholder }} type={{ row.type }} class="shadow appearance-none border rounded w-full py-2 px-3 bg-gray-200 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"/>
            </div>
        {% endfor %}
        {% if form.cancel_text %}
            <div class="flex flex-row-reverse items-center justify-between mb-4">
                <button type="submit" class="btn btn-primary btn-blue">{{ form.submit_text }}</button>
                <button type="reset" class="btn btn-gray">{{ form.cancel_text }}</button>
            </div>
        {% elif form.secondary %}
            <div class="flex flex-row-reverse items-baseline justify-between mb-4">
                <button type="submit" class="btn btn-primary btn-blue">{{ form.submit_text }}</button>
                <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href={{ form.secondary.url }}>{{ form.secondary.text }}</a>
            </div>
        {% else %}
            <div class="flex items-center justify-center mb-4">
                <button type="submit" class="btn btn-primary btn-blue">{{ form.submit_text }}</button>
            </div>
        {% endif %}
    </form>
</div>
